n=int(input('enter n value: '))
num=int(input('enter any number: '))
largest=num
small=num
i=1
while(i<n):
    num=int(input('enter any number: '))
    if(num>largest):
        largest=num
    i=i+1
i=1
if(num<small):
    small=num
i=i+1
print('largest number =',largest)
print('smallest number=',small)
print('difference     =',largest-small)
